<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE datasources PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
                             "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
<datasources>
 <local-tx-datasource>
  <jndi-name>swimDS</jndi-name>
  <use-java-context>true</use-java-context>
  <connection-url>jdbc:mysql://localhost:3306/swimdb</connection-url>
  <driver-class>com.mysql.jdbc.Driver</driver-class>
  <!-- Must match the credentials associated to the user enabled to work 
			on SwimDB Database -->
  <user-name>swimadmin</user-name>
  <password>swimpsw</password>
  <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceprionSorter</exception-sorter-class-name>
  <type-mapping>mySQL</type-mapping>
 </local-tx-datasource>
</datasources>
